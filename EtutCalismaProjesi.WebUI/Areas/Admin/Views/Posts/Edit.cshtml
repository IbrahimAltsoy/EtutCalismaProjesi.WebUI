@model EtutCalismaProjesi.Entities.Post

@{
    ViewData["Title"] = "Edit";
}

<h3 class="p-5">Düzenleme Sayfasına Hoşgeldiniz</h3>


<hr />
<div class="row p-5">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group p-lg-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group p-lg-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group p-lg-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file" />
                <img src="/Img/@Model.Image" alt="" height="100" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group p-lg-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group p-lg-3">
                <input type="submit" value="Save" class="btn btn-primary" onclick="return confirm('Güncellemek istediğinden emin misin?')" />
            </div>
        </form>
    </div>
</div>

<div class="p-lg-3">
    <a asp-action="Index">Back to List</a>
</div>

