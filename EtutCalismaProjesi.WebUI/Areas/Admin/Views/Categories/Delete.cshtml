    Layout = "_AdminLayout";
}



<h3 class="p-4">Silme Sayfasına Hoşgeldiniz</h3>
<div class="p-4">
    <h4>Category</h4>
    <hr />
    <dl class="row p-lg-3">
        <dt class = "col-sm-2">
            
            @Html.DisplayNameFor(model => model.Name) 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
