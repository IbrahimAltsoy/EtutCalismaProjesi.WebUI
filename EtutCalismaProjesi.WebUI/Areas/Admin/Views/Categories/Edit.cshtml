@model EtutCalismaProjesi.Entities.Category

@{
    ViewData["Title"] = "Düzenle";
    Layout = "_AdminLayout";
}



<h4 class="p-5">Kategori Düzenleme Sayfasına Hoşgeldiniz</h4>
<hr />
<div class="row p-5">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" > </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary"  onclick="return confirm('Güncellemek istediğinden emin misin?')" />
            </div>
        </form>
    </div>
</div>

<div class="p-5">
    <a asp-action="Index">Back to List</a>
</div>

